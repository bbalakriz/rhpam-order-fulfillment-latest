<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<deployment-descriptor xsi:schemaLocation="http://www.jboss.org/jbpm deployment-descriptor.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <persistence-unit>org.jbpm.domain</persistence-unit>
    <audit-persistence-unit>org.jbpm.domain</audit-persistence-unit>
    <audit-mode>JPA</audit-mode>
    <persistence-mode>JPA</persistence-mode>
    <runtime-strategy>PER_REQUEST</runtime-strategy>
    <marshalling-strategies>
        <marshalling-strategy>
            <resolver>mvel</resolver>
            <identifier>new org.drools.persistence.jpa.marshaller.JPAPlaceholderResolverStrategy("org.acme:order-fulfillment:2.3.0", classLoader)</identifier>
            <parameters/>
        </marshalling-strategy>
    </marshalling-strategies>
    <event-listeners/>
    <task-event-listeners/>
    <globals/>
    <work-item-handlers>
        <work-item-handler>
            <resolver>reflection</resolver>
            <identifier>org.acme.order_fulfillment.StockReviewSupplierMockWih</identifier>
            <parameters/>
            <name>StockReviewSupplier</name>
        </work-item-handler>
        <work-item-handler>
            <resolver>reflection</resolver>
            <identifier>org.acme.order_fulfillment.StockReviewMockWih</identifier>
            <parameters/>
            <name>StockReview</name>
        </work-item-handler>
        <work-item-handler>
            <resolver>reflection</resolver>
            <identifier>org.acme.order_fulfillment.EmailMockWih</identifier>
            <parameters/>
            <name>Email</name>
        </work-item-handler>
        <work-item-handler>
            <resolver>reflection</resolver>
            <identifier>org.acme.order_fulfillment.RestMockWih</identifier>
            <parameters/>
            <name>Rest</name>
        </work-item-handler>
    </work-item-handlers>
    <environment-entries/>
    <configurations/>
    <required-roles/>
    <remoteable-classes/>
    <limit-serialization-classes>true</limit-serialization-classes>
</deployment-descriptor>
